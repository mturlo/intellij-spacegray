<idea-plugin>
    <id>com.github.mturlo.intellij.theme.spacegray</id>
    <name>Spacegray Theme</name>
    <version>1.4.1</version>
    <vendor email="maciej.turlo@gmail.com" url="http://www.github.com/mturlo/intellij-spacegray">Maciej Turlo</vendor>

    <description><![CDATA[
      Spacegray theme for IntelliJ, inspired by one made by <a href="https://twitter.com/kkga_">Gadzhi Kharkharov</a> for <a href="https://kkga.github.io/spacegray/">SublimeText</a>
      <img src="https://raw.githubusercontent.com/mturlo/intellij-spacegray/master/screenshots/lunchbot.png" border="0" width="700"/>
    ]]></description>

    <change-notes><![CDATA[

    <b>1.4.1</b>
    <ul>
        <li>Fixed code completion background colour</li>
        <li>Fixed readability for bottom warning notifications</li>
    </ul>

    <b>1.4.0</b>
    <ul>
        <li>Adapting to IDEA 2019.2</li>
        <li>Fix for disabled parameter info foreground</li>
    </ul>

    <b>1.3.1</b>
    <ul>
        <li>Material Theme compatibility bugfix</li>
    </ul>

    <b>1.3</b>
    <ul>
        <li>Added support for Material Theme UI plugin</li>
    </ul>

    <b>1.2</b>
    <ul>
        <li>Restyled buttons</li>
    </ul>

    <b>1.1</b>
    <ul>
        <li>Inversed colours on info tooltips for readability</li>
        <li>Added screenshot</li>
    </ul>

    <b>1.0</b>
    <ul>
        <li>Initial release</li>
    </ul>

    ]]>
    </change-notes>

    <idea-version since-build="191.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends optional="true">com.chrisrm.idea.MaterialThemeUI</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <themeProvider id="a6b84a05-cf51-40b1-a71f-ae9474d53615" path="/Spacegray.theme.json"/>
    </extensions>

    <extensions defaultExtensionNs="com.chrisrm.idea.MaterialThemeUI">
        <bundledTheme name="Spacegray" path="/themes/spacegray-mt"/>
    </extensions>
    <actions>
        <!-- Add your actions here -->
    </actions>

</idea-plugin>
